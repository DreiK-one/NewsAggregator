@model ChangeEmailViewModel

@{
	ViewData["Title"] = "Changing email";
}

<div id="gtco-main">
	<div class="container">
		<div class="row row-pb-md">
			<div class="col-md-12">
				<ul id="gtco-post-list">
					<li class="entry animate-box" data-animate-effect="fadeIn">
						<div class="entry-desc">
							<h1>Changing email</h1>
							<form asp-controller="Account" asp-action="ChangeEmailConfirm" method="post">

								<div class="validation-summary-errors" asp-validation-summary="ModelOnly"></div> 

								<input asp-for="UserId" type="hidden"/>
	
								<label asp-for="CurrentEmail">Old email</label>
								<input asp-for="CurrentEmail" type="email" />
								<span asp-validation-for="CurrentEmail"></span>
								<p></p>

								<label asp-for="NewEmail">New email</label>
								<input asp-for="NewEmail" type="email" />
								<span asp-validation-for="NewEmail"></span>
								<p></p>

								<label asp-for="ConfirmEmail">Confirm new email</label>
								<input asp-for="ConfirmEmail" type="email" />
								<span asp-validation-for="ConfirmEmail"></span>
								<p></p>

								<br /><br />
								<a asp-controller="Account" asp-action="Manage" class="btn btn-info">Cancel</a>
								<button type="submit" class="btn btn-success">Change</button>
							</form>
						</div>
					</li>
				</ul>	
			</div>
		</div>
	</div>
</div>

@section Scripts
{
	@await Html.PartialAsync("_ValidationScriptsPartial")
}