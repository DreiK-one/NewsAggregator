@model ChangePasswordViewModel

@{
	ViewData["Title"] = "Changing password";
}

<div id="gtco-main">
	<div class="container">
		<div class="row row-pb-md">
			<div class="col-md-12">
				<ul id="gtco-post-list">
					<li class="entry animate-box" data-animate-effect="fadeIn">
						<div class="entry-desc">
							<h1>Changing password</h1>
							<form asp-controller="Account" asp-action="ChangePasswordConfirm" method="post">

								<div class="validation-summary-errors" asp-validation-summary="ModelOnly"></div> 

								<input asp-for="UserId" type="hidden"/>
	
								<label asp-for="OldPassword">Old password</label>
								<input asp-for="OldPassword" type="password" />
								<span asp-validation-for="OldPassword"></span>
								<p></p>

								<label asp-for="NewPassword">New password</label>
								<input asp-for="NewPassword" type="password" />
								<span asp-validation-for="NewPassword"></span>
								<p></p>

								<label asp-for="ConfirmPassword">Confirm new password</label>
								<input asp-for="ConfirmPassword" type="password" />
								<span asp-validation-for="ConfirmPassword"></span>
								<p></p>

								<br /><br />
								<a asp-controller="Account" asp-action="Manage" class="btn btn-info">Cancel</a>
								<button type="submit" class="btn btn-success">Change</button>
							</form>
						</div>
					</li>
				</ul>	
			</div>
		</div>
	</div>
</div>

@section Scripts
{
	@await Html.PartialAsync("_ValidationScriptsPartial")
}