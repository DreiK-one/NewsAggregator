<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
	<meta name="description" content="Fresh news" />
	<meta name="keywords" content="news, aggregator, fresh, sport, tech, culture" />
	<meta name="author" content="Ivan F." />


    <meta property="og:title" content=""/>
	<meta property="og:image" content=""/>
	<meta property="og:url" content=""/>
	<meta property="og:site_name" content=""/>
	<meta property="og:description" content=""/>
	<meta name="twitter:title" content="" />
	<meta name="twitter:image" content="" />
	<meta name="twitter:url" content="" />
	<meta name="twitter:card" content="" />


    <link href="https://fonts.googleapis.com/css?family=Crimson+Text:400,400i|Roboto+Mono" rel="stylesheet">

	<link rel="stylesheet" href="~/css/animate.css">
	<link rel="stylesheet" href="~/css/icomoon.css">
	<link rel="stylesheet" href="~/css/bootstrap.css">
	<link rel="stylesheet" href="~/css/magnific-popup.css">
	<link rel="stylesheet" href="~/css/style.css">
	<link rel="stylesheet" href="~/css/comment.css">
	<script src="~/js/modernizr-2.6.2.min.js"></script>
</head>

<body>
		
	<div class="gtco-loader"></div>
	
	<div id="page">
	<nav class="gtco-nav" role="navigation">
		<div class="container">
			<div class="row">
				<div class="col-xs-2 text-left">
					<div id="gtco-logo"><a asp-controller="Home" asp-action="Index">LifeStyle<span>.</span></a></div>
				</div>
				<div class="col-xs-10 text-right menu-1">
					<ul>
						<li><a asp-controller="Category" asp-action="ShowCategoryWithNews" asp-route-name="Auto">Auto</a></li>
						<li><a asp-controller="Category" asp-action="ShowCategoryWithNews" asp-route-name="Money">Money</a></li>
						<li><a asp-controller="Category" asp-action="ShowCategoryWithNews" asp-route-name="People">People</a></li>
						<li><a asp-controller="Category" asp-action="ShowCategoryWithNews" asp-route-name="Realt">Realt</a></li>
						<li><a asp-controller="Category" asp-action="ShowCategoryWithNews" asp-route-name="Sport">Sport</a></li>
						<li><a asp-controller="Category" asp-action="ShowCategoryWithNews" asp-route-name="Tech">Tech</a></li>
						<li><a asp-controller="Category" asp-action="ShowCategoryWithNews" asp-route-name="Games">Games</a></li>
						@await Html.PartialAsync("_LoginPartial")
					</ul>
				</div>
			</div>
			
		</div>
	</nav>
	<header id="gtco-header" class="gtco-cover" role="banner" style="background-image:url(~/images/img_1.jpg);" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
	</header>
					@RenderBody()

	<footer id="gtco-footer" role="contentinfo">
		<div class="container">
			<div class="row row-pb-md">
				<div class="col-md-12">
					<h3 class="footer-heading">Most Rated News</h3>
				</div>
				<div class="col-md-4">
					<a asp-controller="Article" asp-action="BestOfDayArticle" class="post-meta">
					<div class="post-entry">
						<div class="post-img">
							<img src="~/images/news.jpg" class="img-responsive">
						</div>
						<div class="post-copy">
							<h3>Best of today</h3>
							<span class="date-posted">@DateTime.Now.ToString("d")</span>
						</div>
					</div>
					</a>
				</div>
				<div class="col-md-4">
					<a asp-controller="Article" asp-action="BestOfMonthArticle" class="post-meta">
					<div class="post-entry">
						<div class="post-img">
							<img src="~/images/news.jpg" class="img-responsive">
						</div>
						<div class="post-copy">
							<h3>Best of this month</h3>
							<span class="date-posted">@DateTime.Now.ToString("MMMM yyyy", CultureInfo.GetCultureInfo("en-US"))</span>
						</div>
					</div>
					</a>
				</div>
				<div class="col-md-4">
					<a asp-controller="Article" asp-action="BestOfAllTimeArticle" class="post-meta">
						<div class="post-entry">
							<div class="post-img">
								<img src="~/images/news.jpg" class="img-responsive">
							</div>
							<div class="post-copy">
								<h3>Best of all time</h3>
								<span class="date-posted">2021 - @DateTime.Now.ToString("yyyy")</span>
							</div>
						</div>
					</a>
				</div>
			</div>

			<div class="row copyright">
				<div class="col-md-12 text-center">
					<p>
						<small class="block">&copy;  @DateTime.Now.ToString("yyyy") Lifestyle. All Rights Reserved.</small> 
					</p>
					<p>
						<ul class="gtco-social-icons">
							<li><a href="#"><i class="icon-twitter"></i></a></li>
							<li><a href="#"><i class="icon-facebook"></i></a></li>
							<li><a href="#"><i class="icon-linkedin"></i></a></li>
							<li><a href="#"><i class="icon-dribbble"></i></a></li>
						</ul>
					</p>
				</div>
			</div>

		</div>
	</footer>
	</div>

	<div class="gototop js-top">
		<a href="#" class="js-gotop"><i class="icon-arrow-up"></i></a>
	</div>
	
	<script src="~/js/jquery.min.js"></script>
	<script src="~/js/jquery.easing.1.3.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
	<script src="~/js/jquery.waypoints.min.js"></script>
	<script src="~/js/jquery.stellar.min.js"></script>
	<script src="~/js/main.js"></script>
	<script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
