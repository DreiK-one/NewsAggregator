@model Pager
<div class="row">
	<div class="col-md-12 text-center">
		<nav aria-label="Page navigation">
			<ul class="pagination">
				@if (Model.CurrentPage > 1)
				{
					<li>
						  <a asp-controller="Admin" asp-action="GetArticlesOnAdminPanel" asp-route-page="1">
							<span aria-hidden="true">&Pr;</span>
						  </a>
					</li>
					<li>
						  <a asp-controller="Admin" asp-action="GetArticlesOnAdminPanel" asp-route-page="@(@Model.CurrentPage - 1)">
							<span aria-hidden="true">&pr;</span>
						  </a>
					</li>
				}

				@if (Model.TotalPages > 0)
				{
				
						@for (var pg = Model.StartPage; pg <= Model.EndPage; pg++)
						{
							<li class="@(pg == Model.CurrentPage ? "active" : "")">
								<a asp-controller="Admin" asp-action="GetArticlesOnAdminPanel" asp-route-page="@pg">@pg</a>
							</li>
						}
				
				}

				@if (Model.CurrentPage < Model.TotalPages)
				{
					<li>
						  <a asp-controller="Admin" asp-action="GetArticlesOnAdminPanel" asp-route-page="@(@Model.CurrentPage + 1)">
							<span aria-hidden="true">&sc;</span>
						  </a>
					</li>
					<li>
						  <a asp-controller="Admin" asp-action="GetArticlesOnAdminPanel" asp-route-page="@(@Model.TotalPages)">
							<span aria-hidden="true">&Sc;</span>
						  </a>
					</li>
				}
			</ul>
		</nav>
	</div>
</div>