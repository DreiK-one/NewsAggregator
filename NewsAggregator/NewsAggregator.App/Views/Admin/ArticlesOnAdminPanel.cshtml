@model List<AllNewsOnHomeScreenViewModel>

@{
    ViewData["Title"] = "LifeStyle.";
}
<div id="gtco-main">
	<div class="container">
			<div class="row row-pb-md">
				<div class="col-md-12">
					<a asp-controller="Admin" asp-action="Index" class="btn btn-info">Back to Admin panel</a>
					<a asp-controller="Article" asp-action="Create" class="btn btn-success">Create article</a>
					<br /><br />
					<ul id="gtco-post-list">	
						@foreach(var article in Model)
						{
							<li class="one-third entry animate-box" data-animate-effect="fadeIn">
									<a asp-controller="Article" asp-action="ReadArticle" asp-route-id="@article.Id">
										<div class="entry-img" style="@article.Image"></div>
										<div class="entry-desc">
											<h3>@Html.Raw(article.Title)</h3>
											<p>@Html.Raw(article.Description)</p>
										</div>
									</a>
								<a asp-controller="Article" asp-action="Edit" 
								asp-route-id="@article.Id" asp-route-title="@article.Title" 
								asp-route-description="@article.Description" asp-route-body="@article.Body"
								asp-route-sourceurl="@article.SourceUrl" asp-route-image="@article.Image"
								asp-route-creationdate="@article.CreationDate" asp-route-categoryid="@article.CategoryId"
								asp-route-sourceid="@article.SourceId" class="post-meta-left btn btn-info">Edit</a>
								<a asp-controller="Article" asp-action="Delete" asp-route-id="@article.Id" class="post-meta-right btn btn-danger">Delete</a>
							</li>
						}
					</ul>	
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 text-center">
					<nav aria-label="Page navigation">
						<ul class="pagination">
						<li>
							<a href="#" aria-label="Previous">
							<span aria-hidden="true">&laquo;</span>
							</a>
						</li>
						<li class="active"><a href="#">1</a></li>
						<li><a href="#">2</a></li>
						<li><a href="#">3</a></li>
						<li><a href="#">4</a></li>
						<li><a href="#">5</a></li>
						<li>
							<a href="#" aria-label="Next">
							<span aria-hidden="true">&raquo;</span>
							</a>
						</li>
						</ul>
					</nav>
				</div>
			</div>
	</div>
</div>