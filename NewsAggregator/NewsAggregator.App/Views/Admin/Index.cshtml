@{
	ViewData["Title"] = "Admin panel";
}
<div id="gtco-main">
	<div class="container">
		<div class="row row-pb-md">
			<div class="col-md-12">
				<div class="list-group">
					<a asp-controller="Category" asp-action="Index" class="list-group-item list-group-item-action list-group-item-danger">
						<div class="entry-desc">
							<h1>Manage Сategories</h1>
						</div>
					</a>

					<a asp-controller="Role" asp-action="Index" class="list-group-item list-group-item-action list-group-item-danger">
						<div class="entry-desc">
							<h1>Manage Roles</h1>
						</div>
					</a>

					<a asp-controller="Source" asp-action="Index" class="list-group-item list-group-item-action list-group-item-danger">
						<div class="entry-desc">
							<h1>Manage Sources</h1>
						</div>
					</a>

					<a asp-controller="User" asp-action="Index" class="list-group-item list-group-item-action list-group-item-danger">
						<div class="entry-desc">
							<h1>Manage Users</h1>
						</div>
					</a>

					<a asp-controller="Admin" asp-action="GetArticlesOnAdminPanel" class="list-group-item list-group-item-action list-group-item-danger">
						<div class="entry-desc">
							<h1>Manage Articles</h1>
						</div>
					</a>

					<br />

					<form asp-controller="Admin" asp-action="GetNewsFromSources" method="post">
						<div class="entry-desc">
							<button type="submit" class="btn btn-danger"><h2>Update news manually</h2></button>
							<a asp-controller="Admin" asp-action="Hangfire" class="btn btn-success"><h2>Go to Hangfire</h2></a>
						</div>
					</form>


				</div>
			</div>
		</div>
	</div>
</div>