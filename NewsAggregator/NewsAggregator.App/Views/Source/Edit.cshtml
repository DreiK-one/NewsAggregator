@model SourceModel

@{
	ViewData["Title"] = "Edit source";
}

<div id="gtco-main">
	<div class="container">
		<div class="row row-pb-md">
			<div class="col-md-12">
				<ul id="gtco-post-list">
					<li class="entry animate-box" data-animate-effect="fadeIn">
						<div class="entry-desc">
							<h1>Editing of source</h1>
							<form asp-controller="Source" asp-action="EditSource" method="post">
								<div class="validation-summary-errors" asp-validation-summary="ModelOnly"></div>
								<input asp-for="Id" type="hidden" value="@Model.Id" />

								<label asp-for="Name">Name of source</label>
								<input asp-for="Name" type="text" value="@Model.Name"/>
								<span asp-validation-for="Name"></span>
								<p></p>

								<label asp-for="BaseUrl">BaseUrl</label>
								<input asp-for="BaseUrl" type="text" value="@Model.BaseUrl"/>
								<span asp-validation-for="BaseUrl"></span>
								<p></p>

								<label asp-for="RssUrl">RssUrl</label>
								<input asp-for="RssUrl" type="text" value="@Model.RssUrl"/>
								<span asp-validation-for="RssUrl"></span>
								<p></p>

								<br /><br />
								<a asp-controller="Source" asp-action="Index" class="btn btn-info">Cancel</a>
								<button type="submit" class="btn btn-success">Submit</button>
							</form>
						</div>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div> 

@section Scripts
{
	@await Html.PartialAsync("_ValidationScriptsPartial")
}