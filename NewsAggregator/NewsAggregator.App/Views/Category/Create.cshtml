@model CategoryViewModel

<div id="gtco-main">
	<div class="container">
		<div class="row row-pb-md">
			<div class="col-md-12">
				<ul id="gtco-post-list">
					<li class="entry animate-box" data-animate-effect="fadeIn">
						<div class="entry-desc">
							<form asp-controller="Category" asp-action="CreateAsync" method="post">
							<input asp-for="Id" type="hidden" value="@Guid.NewGuid()" />
							<label asp-for="Name">Name</label>
							<input asp-for="Name" type="text" />
							<button type="submit" class="post-meta btn btn-success">Submit</button>
							</form>
						</div>
					</li>
				</ul>	
			</div>
		</div>
	</div>
</div>