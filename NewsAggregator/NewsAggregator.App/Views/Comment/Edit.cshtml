@model CommentModel

@{
	ViewData["Title"] = "Edit comment";
}

<div id="gtco-main">
	<div class="container">
		<div class="row row-pb-md">
			<div class="col-md-12">
				<ul id="gtco-post-list">
					<li class="entry animate-box" data-animate-effect="fadeIn">
						<div class="entry-desc">
							<h1>Editing of comment</h1>
							<form asp-controller="Comment" asp-action="EditComment" method="post">
								<div class="validation-summary-errors" asp-validation-summary="ModelOnly"></div> 
								<input asp-for="Id" type="hidden" value="@Model.Id" />
								<input asp-for="CreationDate" type="hidden" value="@Model.CreationDate" />
								<input asp-for="UserId" type="hidden" >
								<input asp-for="ArticleId" type="hidden">
								<input asp-for="ReturnUrl" type="hidden" />

								<label asp-for="Text">Text</label>
								<textarea asp-for="Text" type="text">@Model.Text</textarea>
								<span asp-validation-for="Text"></span>
								<p></p>

								<br /><br />
								<a asp-controller="Article" asp-action="ReadArticle" asp-route-id="@Model.ReturnUrl" class="btn btn-info">Cancel</a>
								<button type="submit" class="btn btn-success">Save changes</button>
							</form>
						</div>
					</li>
				</ul>	
			</div>
		</div>
	</div>
</div>

@section Scripts
{
	@await Html.PartialAsync("_ValidationScriptsPartial")
}