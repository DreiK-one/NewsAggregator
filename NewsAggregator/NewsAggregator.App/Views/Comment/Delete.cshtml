@model DeleteCommentViewModel

@{
	ViewData["Title"] = "Delete comment";
}

<div id="gtco-main">
	<div class="container">
		<div class="row row-pb-md">
			<div class="col-md-12">
				<div class="col-12">
					<div class="card">
						<div class="card-body">
							<h1>Delete comment</h1>
							<form asp-controller="Comment" asp-action="DeleteComment" method="post">
								<h2 class="card-title">Do you really want to delete this comment?
								<input type="hidden" asp-for="Id" />
								<input type="hidden" asp-for="ReturnUrl"/>
								<a asp-controller="Article" asp-action="ReadArticle" asp-route-id="@Model.ReturnUrl" class="btn btn-info">Cancel</a>
								<button type="submit" class="btn btn-danger">Delete</button>
								</h2>
								<br /><br /><br /><br />				
							</form>
						</div>
					</div>
				</div>	
			</div>
		</div>
	</div>
</div>

